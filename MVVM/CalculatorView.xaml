<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Calcolatrice.MVVM.CalculatorView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CalculatorView">
    <Grid RowDefinitions=".4*,.6*">
        <VerticalStackLayout>
            <Label StyleClass="lblText, lblOperations" Text="{Binding Formula}" />
            <Label StyleClass="lblText, lblResult" Text="{Binding Result}" />
        </VerticalStackLayout>
        <Grid Grid.Row="1">
            <BoxView />
            <Grid
                ColumnDefinitions="*,*,*,*"
                RowDefinitions="*,*,*,*,*"
                StyleClass="gridSpacing">
                <!--#region First Row-->
                <Button
                    Command="{Binding OperationCommand}"
                    CommandParameter="AC"
                    StyleClass="OtherActivitiesButton"
                    Text="AC" />
                <Button
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="RemoveLast"
                    StyleClass="OtherActivitiesButton"
                    Text="âŒ«" />
                <Button
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="%"
                    StyleClass="OtherActivitiesButton"
                    Text="%" />
                <Button
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter="/"
                    StyleClass="OperatorsButton"
                    Text="/" />
                <!--#endregion-->
                <!--#region Second Row-->
                <Button
                    Grid.Row="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="7"
                    Text="7" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="8"
                    Text="8" />
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="9"
                    Text="9" />
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter="*"
                    StyleClass="OperatorsButton"
                    Text="*" />
                <!--#endregion-->
                <!--#region Third Row-->
                <Button
                    Grid.Row="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="4"
                    Text="4" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="5"
                    Text="5" />
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="6"
                    Text="6" />
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter="-"
                    StyleClass="OperatorsButton"
                    Text="-" />
                <!--#endregion-->
                <!--#region Fourth Row-->
                <Button
                    Grid.Row="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter="1"
                    Text="1" />
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Command="{Binding OperationCommand}"
                    CommandParameter="2"
                    Text="2" />
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="3"
                    Text="3" />
                <Button
                    Grid.Row="3"
                    Grid.Column="3"
                    Command="{Binding OperationCommand}"
                    CommandParameter="+"
                    StyleClass="OperatorsButton"
                    Text="+" />
                <!--#endregion-->
                <!--#region Fifth Row-->
                <Button
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="0"
                    Text="0" />
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Command="{Binding OperationCommand}"
                    CommandParameter="."
                    Text="." />
                <Button
                    Grid.Row="4"
                    Grid.Column="3"
                    Command="{Binding CalculateCommand}"
                    StyleClass="OperatorsButton"
                    Text="=" />
                <!--#endregion-->
            </Grid>
        </Grid>
    </Grid>
</ContentPage>